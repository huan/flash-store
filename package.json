{
  "name": "flash-store",
  "version": "0.16.8",
  "description": "FlashStore is a Key-Value persistent storage with easy to use ES6 Map-like API(both Async and Sync support), powered by LevelDB and TypeScript.",
  "main": "bundles/flash-store.umd.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc --module esnext --moduleResolution node",
    "pack": "npm pack",
    "clean": "shx rm -fr dist/* bundles/*",
    "doc": "npm run dist && echo '# FlashStore v'$(jq -r .version package.json)' Documentation\n' > docs/index.md && jsdoc2md dist/flash-store.js>> docs/index.md",
    "demo": "ts-node example/demo.ts",
    "dist": "npm run clean && npm run build && npm run rollup && npm run dist:es6to5",
    "dist:es6to5": "tsc --out ./bundles/flash-store.umd.js --target es5 --allowJs bundles/flash-store.es6.umd.js --lib es6,dom",
    "lint": "npm run lint:es && npm run clean && tsc --noEmit",
    "lint:es": "eslint 'src/**/*.ts' 'tests/**/*.ts' --ignore-pattern tests/fixtures/",
    "rollup": "rollup -c",
    "test": "npm run lint && npm run test:unit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "blue-tape -r ts-node/register \"src/**/*.spec.ts\" \"tests/**/*.spec.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huan/flash-store.git"
  },
  "keywords": [
    "leveldb",
    "nosql",
    "database"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/huan/flash-store/issues"
  },
  "homepage": "https://github.com/huan/flash-store#readme",
  "dependencies": {
    "app-root-path": "^3.0.0",
    "brolog": "^1.2.6",
    "cuid": "^2.1.1",
    "rimraf": "^3.0.0",
    "snap-db": "^1.1.6",
    "state-switch": "^0.6.2"
  },
  "devDependencies": {
    "@chatie/eslint-config": "^0.8.1",
    "@chatie/git-scripts": "^0.2.5",
    "@chatie/semver": "^0.4.7",
    "@chatie/tsconfig": "^0.6.1",
    "@types/app-root-path": "^1.2.4",
    "@types/blue-tape": "^0.1.31",
    "@types/node": "^13.5.1",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^7.5.0",
    "@types/semver": "^7.1.0",
    "blue-tape": "^1.0.0",
    "git-scripts": "git+https://github.com/nkzawa/git-scripts.git",
    "pkg-jq": "^0.2.2",
    "rollup": "^1.30.1",
    "rollup-plugin-json": "^4.0.0",
    "shx": "^0.3.2",
    "sinon": "^8.0.0",
    "sinon-test": "^2.1.1",
    "ts-node": "^8.4.1",
    "tslint": "^5.10.0",
    "typescript": "^3.0.1",
    "tstest": "^0.4.9"
  },
  "files": [
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "bundles/",
    "src/",
    "dist/"
  ],
  "engines": {
    "node": ">= 10"
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  }
}
